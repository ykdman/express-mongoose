<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
</head>
<body>
    <h1>Edit A Product</h1>
    <form action="/products/<%= product._id %>?_method=PUT" method="post">
        <label for="name">Product Name</label>
        <input type="text" id="name" name="name" placeholder="Product Name" value="<%= product.name %>">

        <label for="price">Price</label>
        <input type="number" id="price" name="price" placeholder="Product Price" value="<%= product.price %>">
        <label for="category">Category</label>
        <select name="category" id="category">
            <%for (let category of categories) {%>
                <option value="<%= category %>" <%= product.category === category ? 'selected' : '' %>>
                    <%= category %>
                </option>
            <%}%>
        </select>
        <button>Submit</button>
    </form>

    <a href="/products/<%= product._id %>">Cancel</a>
</body>
</html>